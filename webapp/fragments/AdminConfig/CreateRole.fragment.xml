<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="createRoleDialog" title="Create User Role" stretch="false">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="Role" />
                <Input id="roleInput" placeholder="Enter Role" />
                
                <Label text="Role Description" class="sapUiSmallMarginTop"/>
                <Input id="roleDescInput" placeholder="Enter Role Description"  />
            </VBox>
        </content>
        <beginButton>
            <Button text="Submit" press="onSaveRole" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
