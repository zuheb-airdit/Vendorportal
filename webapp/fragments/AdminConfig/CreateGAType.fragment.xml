<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="createGATypeDialog" title="Create GA Type" stretch="false">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="GA Type" />
                <Input id="gaTypeInput" placeholder="Enter GA Type" />
                
                <Label text="GA Type Description" class="sapUiSmallMarginTop"/>
                <Input id="gaTypeDescInput" placeholder="Enter GA Type Description"  />

                 <Label text="Company" class="sapUiSmallMarginTop"/>
                <Input id="gaTypeCompanyInput" placeholder="Enter Company"  />
            </VBox>
        </content>
        <beginButton>
            <Button text="Submit" press="onSaveGAType" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
