<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="createCompanyCodeDialog" title="Create Company Code" stretch="false">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="Company Code" />
                <Input id="companyCodeInput" placeholder="Enter Company Code" />
                
                <Label text="Company Code Description" class="sapUiSmallMarginTop"/>
                <Input id="companyCodeDescInput" placeholder="Enter Company Code Description"  />

                 <Label text="Company" class="sapUiSmallMarginTop"/>
                <Input id="companyinput" placeholder="Enter Company"  />
            </VBox>
        </content>
        <beginButton>
            <Button text="Submit" press="onSaveCompanyCode" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
