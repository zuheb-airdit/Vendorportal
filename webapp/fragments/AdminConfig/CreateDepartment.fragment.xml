<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="createDepartmentDialog" title="Create Department" stretch="false">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="Department" />
                <Input id="departmentInput" placeholder="Enter Department" />
                
                <Label text="Department Description" class="sapUiSmallMarginTop"/>
                <Input id="departmentDescInput" placeholder="Enter Department Description"  />
            </VBox>
        </content>
        <beginButton>
            <Button text="Submit" press="onSaveDepartment" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
