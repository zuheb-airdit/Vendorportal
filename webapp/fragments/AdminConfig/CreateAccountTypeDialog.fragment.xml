<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="createAccountTypeDialog" title="Create Account Type" stretch="false">
        <content>
            <VBox class="sapUiMediumMargin">
                <!-- Account Group Input Field -->
                <Label text="Account Group" />
                <Input id="accountGroupInput" placeholder="Enter Account Group" />

                <Label text="Description" />
                <Input id="descGroupInput" placeholder="Enter Description" />

                <!-- Required Documents Text Area -->
                <Label text="Required Documents" class="sapUiSmallMarginTop"/>
                <TextArea id="requiredDocsInput" placeholder="Enter documents, separated by commas" growing="true" growingMaxLines="5" width="20rem" />
            </VBox>
        </content>
        <beginButton>
            <Button text="Submit" press="onSaveAccountType" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelDialogAccount" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
