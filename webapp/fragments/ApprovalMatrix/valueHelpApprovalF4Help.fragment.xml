<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<SelectDialog
		title="Department"
		items="{/DEPARTMENT}"
		contentHeight="10rem"
		search=".onValueHelpDialogSearch"
		confirm=".onValueHelpDialogClose"
		cancel=".onValueHelpDialogClose">
		<StandardListItem
			iconDensityAware="false"
			iconInset="false"
			title="{CODE}"
			info="{DESC}" />
	</SelectDialog>
</core:FragmentDefinition>