<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
    <List
        
    >
        <items>
            <StandardListItem
                
				
                title="Super User"
                description="anilk@airditsoftware.com"
                type="Active"
                press="onListItemPress"
            >
                <avatar>
                   
                    <Avatar
                        src="{imageModel>/path}/images/cpy.png"
                        displayShape="Square"
                        
                        showBorder="true"
                        displaySize="XL"
                    />
                </avatar>
            </StandardListItem>
            <StandardListItem
                icon="sap-icon://customer"
                title="My Profile"
                type="Active"
                press="onMyProfilePress"
            />
            <StandardListItem
                icon="sap-icon://edit"
                title="Change Password"
                type="Active"
                press="onListItemPress"
            />
            <StandardListItem
                icon="sap-icon://log"
                title="Logout"
                type="Active"
                press="onPressLogout"
            />
            
        </items>
    </List>
</core:FragmentDefinition>
