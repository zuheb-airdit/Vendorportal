        <buttons>
            <Button
                text="Submit"
                press="onSumbitUserMasterEdit"
                icon="sap-icon://accept"
                type="Accept"
                id="idSubmitBtn"
            />
            <Button
                id="idCancelBtn"
                press="onCloseUserFragmentEdit"
