<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:upload="sap.m.upload"
    xmlns:form="sap.ui.comp.smartform"
    xmlns:sf="sap.ui.comp.smartfield"
    xmlns:l="sap.ui.layout"
>

    <Dialog
        id="sendBackDialog"
        title="Re-Assign Request"
        type="Message"
        afterClose="onDialogClose"
    >
        <content>
            <VBox class="sapUiSmallMargin">
                <Label
                    text="Re-Assign Email"
                    labelFor="instructionInput"
                />
                <Input
                   id="idReassignInput"
                    valueHelpRequest="onValueHelpUserDetails"
                    showValueHelp="true"
                    suggestionItems="{FilteredUser>/results}"
                    suggestionItemSelected=".onSuggestionItemSelected"
                    value="{hierarchydata>user}"
                >
                    <suggestionItems>
                        <core:ListItem
                            key="{hierarchydata>user}"
                            text="{hierarchydata>user}"
                        />
                    </suggestionItems>
                </Input>
            </VBox>
        </content>
        <beginButton>
            <Button
                text="Submit"
                press="onSubmitConfirm"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onDialogCancel"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
