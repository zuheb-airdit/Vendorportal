<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="com.air.vp.lnchpage.controller.NotFound">
    <Page title="Page Not Found" showHeader="true" navButtonPress="onNavPress" showNavButton="true">
        <content>
            <VBox justifyContent="Center" alignItems="Center" width="100%" height="100%">
                <IllustratedMessage
                    illustrationType="sapIllus-Scene-PageNotFound"
                    title="Page Not Found"
                    description="Sorry, the page you are looking for does not exist. Please check the URL or go back to the homepage."
                    visible="true" />
            </VBox>
        </content>
    </Page>
</mvc:View>

