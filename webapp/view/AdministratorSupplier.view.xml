<mvc:View controllerName="com.air.vp.lnchpage.controller.AdministratorSupplier"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:forms="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:m="sap.m" height="100%">
    <ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" toggleHeaderOnTitleClick="false">
        <headerTitle>
            <ObjectPageDynamicHeaderTitle >
                <expandedHeading>
                    <m:Title text="Airdit Software" wrapping="true"/>
                </expandedHeading>

                <snappedHeading>
                    <m:FlexBox fitContainer="true" alignItems="Center">
                        <m:Avatar src="sap-icon://picture" backgroundColor="Random" class="sapUiTinyMarginEnd"/>
                        <m:Title text="Airdit Software" wrapping="true" />
                    </m:FlexBox>
                </snappedHeading>

                <expandedContent>
                    <m:Text text="Senior Developer"/>
                </expandedContent>

                <snappedContent>
                    <m:Text text="Senior Developer"/>
                </snappedContent>

                <snappedTitleOnMobile>
                    <m:Title text="Senior Developer"/>
                </snappedTitleOnMobile>


            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox wrap="Wrap">
                <m:Avatar src="sap-icon://picture" backgroundColor="Random" displaySize="L" class="sapUiTinyMarginEnd"/>

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <m:ObjectStatus title="User ID" text="12345678"/>
                    <m:ObjectStatus title="Language" text="English"/>
                    <m:ObjectStatus title="Country" text="USA"/>
                    <m:ObjectStatus title="Phone Number" text="1-844-726-7733"/>
                </layout:VerticalLayout>

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <m:ObjectStatus title="Functional Area" text="Development"/>
                    <m:ObjectStatus title="Cost Center" text="PI DFA GD Programs and Product"/>
                    <m:ObjectStatus title="Email" text="email@address.com"/>
                    <m:ObjectStatus title="Company Address" text="1234 Elm Street, Suite 567, Springfield, USA"/>
                    <m:ObjectStatus title="Contact Person" text="John Doe"/>
                </layout:VerticalLayout>

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <layout:layoutData>
                        <ObjectPageHeaderLayoutData visibleS="false" visibleM="false"/>
                    </layout:layoutData>
                    <m:ObjectStatus text="Senior UI Developer" state="Success"/>
                    <m:RatingIndicator maxValue="6" value="5" tooltip="Rating Tooltip"/>
                </layout:VerticalLayout>
            </m:FlexBox>
        </headerContent>

        <sections>
            <ObjectPageSection titleUppercase="false" class="noMargin">
                <subSections>
                    <ObjectPageSubSection title="Bank Details" titleUppercase="false">
                        <blocks>
                            <m:VBox class="sapUiSmallMargin">
                                <!-- First Row -->
                                <m:HBox>
                                    <m:Label text="Account Number:" width="10rem" />
                                    <m:Text text="1234567890" width="13rem" />
                                    <m:VBox width="2rem"/>
                                    <m:Label text="IFSC Code:" width="10rem" />
                                    <m:Text text="DUMMYIFSC123" width="13rem" />
                                </m:HBox>

                                <!-- Second Row -->
                                <m:HBox>
                                    <m:Label text="Branch:" width="10rem" />
                                    <m:Text text="Springfield Branch" width="13rem" />
                                    <m:VBox width="2rem"/>
                                    <m:Label text="Bank Name:" width="10rem" />
                                    <m:Text text="Dummy Bank Ltd." width="13rem" />
                                </m:HBox>

                                <!-- Third Row -->
                                <m:HBox>
                                    <m:Label text="Account Type:" width="10rem" />
                                    <m:Text text="Savings" width="13rem" />
                                    <m:VBox width="2rem"/>
                                    <m:Label text="LST No:" width="10rem" />
                                    <m:Text text="LST1234567" width="13rem" />
                                </m:HBox>

                                <!-- Fourth Row -->
                                <m:HBox>
                                    <m:Label text="GST No:" width="10rem" />
                                    <m:Text text="GST123456789" width="13rem" />
                                    <m:VBox width="2rem"/>
                                    <m:Label text="PAN No:" width="10rem" />
                                    <m:Text text="PAN1234567" width="13rem" />
                                </m:HBox>

                                <!-- Fifth Row -->
                                <m:HBox>
                                    <m:Label text="MSME Category:" width="10rem" />
                                    <m:Text text="Small" width="13rem" />
                                    <m:VBox width="2rem"/>
                                    <m:Label text="Vendor Account Group:" width="10rem" />
                                    <m:Text text="Domestic" width="13rem" />
                                </m:HBox>
                            </m:VBox>


                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection title="PO Details" titleUppercase="false">
                        <blocks>
                            <m:Table id="poTable" items="{/POs}">
                                <m:columns>
                                    <m:Column>
                                        <m:header>
                                            <m:Label text="PO Number" class="labelSize"/>
                                        </m:header>
                                    </m:Column>
                                    <m:Column>
                                        <m:header>
                                            <m:Label text="PO Amount" />
                                        </m:header>
                                    </m:Column>
                                    <m:Column>
                                        <m:header>
                                            <m:Label text="Date of Approved" />
                                        </m:header>
                                    </m:Column>
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem>
                                        <m:cells>
                                            <m:Text text="{PONumber}" />
                                            <m:Text text="{POAmount}" />
                                            <m:Text text="{DateOfApproved}" />
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>