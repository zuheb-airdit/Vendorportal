<mvc:View
    controllerName="com.air.vp.lnchpage.controller.RegistrationForm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:upload="sap.m.upload"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified"
>
    <Page
        id="page"
        title="Buyer Creation Form"
        showHeader="true"
        showNavButton="true"
        navButtonPress="onBackfromForm"
    >
        <content>
            <VBox
                width="60rem"
                class="sapUiTinyMarginBegin sapUiTinyMarginTop"
            >
                <f:SimpleForm
                    id="SimpleFormChangeColumn_oneGrousp234"
                    editable="true"
                    layout="ColumnLayout"
                    title="Vendor Information"
                    columnsM="2"
                    columnsL="2"
                    columnsXL="2"
                    objectBindings="{ path: 'agpFormData>/GENERAL_INFORMATION/VENDOR_INFORMATION' }"
                >
                    <f:content>
                        <Label
                            text="Vendor Organisation Name"
                            required="true"
                        />
                        <Input
                            value="{agpFormData>VENDOR_ORGANISATION_NAME}"
                            width="100%"
                            required="true"
                        >
                            <layoutData>
                                <l:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </Input>

                        <Label text="Contact Person" />
                        <Input value="{agpFormData>CONTACT_PERSON}" />

                        <Label text="Priority" />
                        <Input value="{agpFormData>PRIORITY}" />
                    </f:content>
                </f:SimpleForm>

                <f:SimpleForm
                    id="SimpleFormChangeColumn_oneGroup234"
                    editable="true"
                    layout="ColumnLayout"
                    title="Complete Office Address"
                    columnsM="2"
                    columnsL="2"
                    columnsXL="2"
                    class="sapUiTinyMarginTop"
                    objectBindings="{ path: 'agpFormData>/GENERAL_INFORMATION/VENDOR_ADDRESS' }"
                >
                    <f:content>
                        <Label
                            text="Street"
                            required="true"
                        />
                        <Input value="{agpFormData>STREET}" required="true" />

                        <Label
                            text="Street 2"
                            required="true"
                        />
                        <Input value="{agpFormData>STREET2}" required="true" />

                        <Label
                            text="Street 3"
                            required="true"
                        />
                        <Input value="{agpFormData>STREET3}" required="true" />

                        <Label
                            text="City"
                            required="true"
                        />
                        <Input value="{agpFormData>CITY}" required="true" />

                        <Label text="District" />
                        <Input value="{agpFormData>DISTRICT}" />

                        <Label
                            text="Pincode"
                            required="true"
                        />
                        <Input value="{agpFormData>POSTAL_CODE}" maxLength="6" required="true" />

                        <Label
                            text="State"
                            required="true"
                        />
                        <ComboBox
                            items="{path: 'stateModel>/states',length:500}"
                            showSecondaryValues="true"
                            selectedKey="{agpFormData>STATE}"
                            required="true"
                        >
                            <core:ListItem
                                key="{stateModel>name}"
                                text="{stateModel>name}"
                                additionalText="{stateModel>id}"
                            />
                        </ComboBox>

                        <Label text="Country" />
                        <!-- <Input value="{agpFormData>COUNTRY}"></Input> -->
                        <ComboBox
                            items="{path: '/Country',length:500}"
                            showSecondaryValues="true"
                            selectedKey="{agpFormData>COUNTRY}"
                        >
                            <core:ListItem
                                key="{LANDX}"
                                text="{LANDX}"
                                additionalText="{LAND1}"
                            />
                        </ComboBox>

                        <Label
                            text="Email Address"
                            required="true"
                        />
                        <Input
                            value="{agpFormData>EMAIL}"
                            type="Email"
                            required="true"
                        />

                        <Label text="Email Address for Payment" />
                        <Input
                            value="{agpFormData>EMAIL_PAYMENT}"
                            type="Email"
                        />

                        <Label
                            text="Telephone No"
                            required="true"
                        />
                        <Input
                            value="{agpFormData>TELEPHONE}"
                            type="Number"
                            required="true"
                        />

                        <Label text="Mobile Number (if any)" />
                        <Input
                            value="{agpFormData>CONTACT_NO}"
                            type="Number"
                        />
                    </f:content>
                </f:SimpleForm>

                <f:SimpleForm
                    id="SimpleFormChangeColumn_oneGrokup234"
                    editable="true"
                    layout="ColumnLayout"
                    title="Bank Details"
                    class="sapUiTinyMarginTop"
                    columnsM="2"
                    columnsL="2"
                    columnsXL="2"
                    objectBindings="{ path: 'agpFormData>/FINANCIAL_INFORMATION/PRIMARY_BANK_DETAILS' }"
                >
                    <f:content>
                        <Label text="Bank Name" />
                        <Input value="{agpFormData>BANK_NAME}" />

                        <Label text="Bank Branch" />
                        <Input value="{agpFormData>BRANCH_NAME}" />

                        <Label text="IFSC Code" />
                        <Input value="{agpFormData>IFSC_CODE}" />

                        <Label text="Bank Account Number" />
                        <Input value="{agpFormData>ACCOUNT_NO}" />

                        <Label text="Account Type" />
                        <ComboBox
                            showSecondaryValues="true"
                            selectedKey="{agpFormData>ACCOUNT_TYPE}"
                        >
                            <items>
                                <core:Item
                                    text="Savings"
                                    key="Savings"
                                />
                                <core:Item
                                    text="Current"
                                    key="Current"
                                />
                                <core:Item
                                    text="Fixed Deposit"
                                    key="FixedDeposit"
                                />
                            </items>
                        </ComboBox>
                    </f:content>
                </f:SimpleForm>

                <f:SimpleForm
                    id="SimpleFormChangeColumn_oneGrsoup234"
                    editable="true"
                    layout="ColumnLayout"
                    columnsM="2"
                    columnsL="2"
                    columnsXL="2"
                    class="sapUiTinyMarginTop"
                    objectBindings="{ path: 'agpFormData>/FINANCIAL_INFORMATION/PRIMARY_BANK_DETAILS' }"
                >
                    <f:content>
                        <Label text="LST No" />
                        <Input value="{agpFormData>LST_NO}" />

                        <Label text="CST No" />
                        <Input value="{agpFormData>CST_NO}" />

                        <Label text="Due Diligence required" />
                        <CheckBox
                            id="dueDiligenceYes"
                            text="Yes"
                            select="onDueDiligenceSelect"
                        />
                        <CheckBox
                            id="dueDiligenceNo"
                            text="No"
                            select="onDueDiligenceSelect"
                        />

                        <Label
                            text="GST No"
                            required="true"
                        />
                        <Input
                            value="{agpFormData>GST_NO}"
                            maxLength="15"
                            liveChange="onGstNumberChange"
                            required="true"
                        />

                        <Label text="Approver" />
                        <Input value="{agpFormData>APPROVER}" />

                        <Label
                            text="PAN No"
                            required="true"
                        />
                        <Input
                            id="panInput"
                            value="{agpFormData>PAN_NO}"
                            liveChange="onPanChange"
                            maxLength="10"
                            required="true"
                        />

                        <Label text="MSME Category (if applicable)" />
                        <ComboBox
                            showSecondaryValues="true"
                            selectedKey="{agpFormData>MSME_CATEGORY}"
                        >
                            <items>
                                <core:Item
                                    text="true"
                                    key="true"
                                />
                                <core:Item
                                    text="false"
                                    key="false"
                                />
                            </items>
                        </ComboBox>

                        <Label text="Due Diligence request number" />
                        <Input
                            id="dueDiligenceRequestNumber"
                            value="{agpFormData>DUE_DELI_NUM}"
                            editable="false"
                        />

                        <Label text="Vendor Account Group" />
                       <Input value="{agpFormData>VENDOR_ACCOUNT_GROUP}" editable="false"> </Input>
                    </f:content>
                </f:SimpleForm>

                <Table
                    inset="false"
                    id="idAttacmentTable"
                    selectionChange="onValueHelpSelectionChangeUser"
                    class="sapUiTinyMarginTop"
                    headerText="Required Documents"
                    items="{
			            path: 'attachmModel>/documents'
		                 }"
                >
                    <columns>
                        <Column hAlign="Begin">
                            <Text text="Attachments Type" />
                        </Column>
                        <Column
                            hAlign="Begin"
                            width="35rem"
                        >
                            <Text text="Upload" />
                        </Column>
                        <Column hAlign="Begin">
                            <Text text="Preview" />
                        </Column>
                    </columns>
                    <items>
                     <!-- REGISTERED_MAIL: item.REGISTERED_MAIL,
                                            DESCRIPTION: item.DESCRIPTION,
                                            IMAGEURL: item.IMAGEURL,
                                            IMAGE_FILE_NAME: item.IMAGE_FILE_NAME -->
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <Text text="{attachmModel>IMAGE_FILE_NAME}"  />
                                <HBox>
                                    <u:FileUploader
                                        name="{attachmModel>IMAGE_FILE_NAME}"
                                        uploadUrl="upload/"
                                        tooltip="Upload your file to the local server"
                                        uploadComplete="handleUploadComplete"
                                        visible="true"
                                        change="testFuntion"
                                        value="{attachmModel>DESCRIPTION}"
                                    />
                                </HBox>
                                <Button
                                    text="Preview"
                                    press="handleOpenAttachment"
                                >
                                    <customData>
                                        <core:CustomData
                                            key="customData"
                                            value="{attachmModel>DESCRIPTION}"
                                            writeToDom="false"
                                        />
                                    </customData>
                                </Button>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    text="Submit"
                    type="Emphasized"
                    press="handleFormSubmit"
                />
                <Button
                    text="Preview"
                    press="onPreviewBtn"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
