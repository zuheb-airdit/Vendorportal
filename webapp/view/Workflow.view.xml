<mvc:View
    controllerName="com.air.vp.lnchpage.controller.Workflow"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:forms="sap.ui.layout.form"
     xmlns:core="sap.ui.core"
    xmlns:smartTable='sap.ui.comp.smarttable'
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    height="100%"
>
    <Page
        id="pageApproval"
        showHeader="false"
        showFooter="true"
    >
        
        <f:DynamicPage id="dynamicPageId">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                        <Text
                            text="Workflow Management"
                            class="sapUiTinyMarginTop sapUiTinyMarginBegin metroStyleFont"
                        />
                    </HBox>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader>
                <!-- <smartFilterBar:SmartFilterBar
                    id="smartFilterBarRegismaster"
                    entitySet="RequestInfoforStatus6and9"
                    useToolbar="false"
                    basicSearch="true"
                >
                    <smartFilterBar:controlConfiguration>
                        <smartFilterBar:ControlConfiguration
                            key="REQUEST_NO"
                            visibleInAdvancedArea="true"
                            index="0"
                            label="Request No"
                           
                        />
                    </smartFilterBar:controlConfiguration>
                </smartFilterBar:SmartFilterBar> -->
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
        <VBox>
           <smartTable:SmartTable
            entitySet="RequestInfoWithoutFilter"
            id="idSmartTableReqManagementInvitedd"
            showRowCount="true"
            tableType="ResponsiveTable"
            enableAutoBinding="true"
            enableAutoColumnWidth="false"
            enableCopy="false"
            beforeRebindTable="onBeforrebindWorkflpw"
        >
            <smartTable:customToolbar>
                <OverflowToolbar design="Transparent">
                    <SearchField
                        placeholder="Search Here..."
                        search="onSearchReqmanagement"
                        width="20rem"
                    />
                    <ToolbarSpacer />
                    <Button
                        id="idReAssign"
                        text="Re-Assign"
                        press="onReassignReq"
                        enabled="false"
                    />
                </OverflowToolbar>
            </smartTable:customToolbar>
            <Table
                selectionChange="selectionChangeHandlerWorkflow"
                id="idInvitedTableds"
                mode="SingleSelectLeft"
            >
                <columns>
                    <Column>
                        <customData>
                            <core:CustomData
                                key="p13nData"
                                value='\{"columnKey": "REQUEST_NO","leadingProperty": "REQUEST_NO", "sortProperty": "REQUEST_NO", "filterProperty": "REQUEST_NO", "columnIndex": "0" }'
                            />
                        </customData>
                        <Label
                            text="Requested Number"
                            wrapping="true"
                        />
                    </Column>
                    
                    <Column>
                        <customData>
                            <core:CustomData
                                key="p13nData"
                                value='\{"columnKey": "STATUS","leadingProperty": "STATUS", "sortProperty": "STATUS", "filterProperty": "STATUS", "columnIndex": "6"}'
                            />
                        </customData>
                        <Label
                            text="Status"
                            wrapping="false"
                        />
                    </Column>
                   
                    <!-- <Column>
                                        <customData>
                                            <core:CustomData
                                                key="p13nData"
                                                value='\{"columnKey": "SUPPL_TYPE","leadingProperty": "SUPPL_TYPE", "sortProperty": "SUPPL_TYPE", "filterProperty": "SUPPL_TYPE", "columnIndex": "4"}'
                                            />
                                        </customData>
                                        <Label
                                            text="Vendor Type"
                                            wrapping="false"
                                            vAlign="Inherit"
                                        />
                                    </Column>
                                    <Column>
                                        <customData>
                                            <core:CustomData
                                                key="p13nData"
                                                value='\{"columnKey": "BP_TYPE_CODE","leadingProperty": "BP_TYPE_CODE", "sortProperty": "BP_TYPE_CODE", "filterProperty": "BP_TYPE_CODE", "columnIndex": "5"}'
                                            />
                                        </customData>
                                        <Label
                                            text="Vendor Sub-Type"
                                            wrapping="false"
                                            vAlign="Inherit"
                                        />
                                    </Column> -->
                </columns>

                <items>
                    <ColumnListItem
                        vAlign="Middle"
                        press="handleProcessTable_RowClick"
                    >
                    
                        <cells>
                            <VBox>
                                <Text
                                    text="{REQUEST_NO}"
                                    class="usermasterColo"
                                />
                                <Text
                                    text="{REQUEST_TYPE}"
                                    class="blackText"
                                />
                            </VBox>
                            <ObjectStatus
                                text="{  parts: [{path: 'STATUS'}, {path: 'APPROVER_ROLE'}], formatter: '.statusFormatter'}"
                                state="Indication15"
                                inverted="true"
                                class="noWrapText"
                                
                            />
                          
                            <!-- <VBox>
                                                <Text text="{SUPPL_TYPE}" />
                                                <Text
                                                    text="{SUPPL_TYPE_DESC}"
                                                />
                                            </VBox>
                                            <VBox>
                                                <Text text="{BP_TYPE_CODE}" />
                                                <Text text="{BP_TYPE_DESC}" />
                                            </VBox> -->
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </smartTable:SmartTable>
        <Image ariaDetails="detailsActiveImage" src="https://agpcgpdevqa.blob.core.windows.net/qam-files/testingDoc%40gmail.com_FormPreview%20(14).pdf"
					decorative="false"
					press="handleImage3Press" />
                    </VBox>
        </f:content>
        <f:footer />
    </f:DynamicPage>
    </Page>
</mvc:View>
